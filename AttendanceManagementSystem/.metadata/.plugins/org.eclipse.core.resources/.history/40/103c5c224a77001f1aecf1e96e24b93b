	</bean>
	<bean id="jdbc1" class ="org.springframework.jdbc.core.JdbcTemplate">
	<property name="dataSource1" ref="datasource1"></property>
	</bean>
	<bean id="dao1" class ="com.ex.DAO.AttendedstudentsDAO">
	<property name="jdbcTemplate1" ref="jdbc1"></property>
