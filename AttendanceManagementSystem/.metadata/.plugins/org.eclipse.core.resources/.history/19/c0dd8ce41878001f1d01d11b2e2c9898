package com.ex.DAO;

import java.sql.Date;
import java.time.LocalDate;
import java.time.format.DateTimeFormatter;
import java.util.List;

import org.springframework.jdbc.core.JdbcTemplate;

import com.ex.AttendedStudentsEntity;
import com.ex.AttendedStudentsRowMapper;


public class AttendedstudentsDAO {
	
private JdbcTemplate jdbcTemplate1;
	
	public void setJdbcTemplate1(JdbcTemplate jdbcTemplate) {
		this.jdbcTemplate1 = jdbcTemplate;
	}

	
	public int Attendancesave(String branch,int size,String dt) {
		  LocalDate localDate = LocalDate.parse(dt, DateTimeFormatter.ofPattern("yyyy-MM-dd"));

	        // Step 2: Convert LocalDate to java.sql.Date
	        Date sqlDate = Date.valueOf(localDate);
		// TODO Auto-generated method stub
		return jdbcTemplate1.update("insert into attendedstudents(branch,studentsattended,attendancedate) values(?,?,?)", branch,size,sqlDate);
		
	}
	
	public List<AttendedStudentsEntity> DisplayAll() {
		// TODO Auto-generated method stub
		return jdbcTemplate1.query("select * from attendedstudents", new AttendedStudentsRowMapper());
	}
	
	

}
